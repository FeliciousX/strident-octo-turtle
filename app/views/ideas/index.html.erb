<p id="notice"><%= notice %></p>

<h1>Listing Ideas</h1>

<% @ideas.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |idea| %>
      <div class="col-xs-4">
        <%= image_tag idea.picture_url, :width => '100%' if idea.picture.present?%>
        <h4><%= link_to 'Show', idea %></h4>
        <%= idea.description %>
      </div>
    <% end %>
  </div>
<% end %>

<br>

<%= link_to 'New Idea', new_idea_path %>
